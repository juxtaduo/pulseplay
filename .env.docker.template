# ============================================
# PulsePlay AI - Docker Environment Template
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# ============================================
# MongoDB Configuration
# ============================================
# Option 1: Local MongoDB (docker-compose.yml)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongodb_password_here
MONGODB_URI=mongodb://admin:your_secure_mongodb_password_here@mongodb:27017/pulseplay?authSource=admin

# Option 2: MongoDB Atlas (docker-compose.atlas.yml)
# Get connection string from: https://cloud.mongodb.com/
# Format: mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/pulseplay?retryWrites=true&w=majority
# MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/pulseplay?retryWrites=true&w=majority

# ============================================
# Auth0 Configuration
# ============================================
# Get these from your Auth0 dashboard: https://manage.auth0.com/
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id_here
AUTH0_CLIENT_SECRET=your_auth0_client_secret_here
AUTH0_AUDIENCE=https://api.pulseplay.ai
AUTH0_ISSUER_BASE_URL=https://your-domain.auth0.com

# Auth0 Frontend Configuration (used in Vite build)
VITE_AUTH0_DOMAIN=your-domain.auth0.com
VITE_AUTH0_CLIENT_ID=your_auth0_client_id_here
VITE_AUTH0_AUDIENCE=https://api.pulseplay.ai

# ============================================
# AI/ML API Keys
# ============================================
# Google Gemini API Key
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Context7 API Key (for documentation lookup)
# Get from: https://context7.com
CONTEXT7_API_KEY=ctx7sk_your_context7_api_key_here

# Optional: DigitalOcean Gradient AI (Stretch Goal)
GRADIENT_AI_API_KEY=

# ============================================
# Server Configuration
# ============================================
NODE_ENV=production
BACKEND_PORT=3000
FRONTEND_PORT=5173
FRONTEND_URL=http://localhost:5173

# ============================================
# Optional: Database Admin UI
# ============================================
# Mongo Express (MongoDB Admin Interface)
MONGO_EXPRESS_PORT=8081
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=changeme

# ============================================
# Optional: Error Tracking
# ============================================
# Sentry DSN (for error tracking)
# Get from: https://sentry.io/
SENTRY_DSN=

# ============================================
# Optional: Analytics
# ============================================
# Snowflake Analytics (if using)
SNOWFLAKE_ACCOUNT=
SNOWFLAKE_USERNAME=
SNOWFLAKE_PASSWORD=

# ============================================
# Development vs Production
# ============================================
# For production deployment, change these:
# - Set strong passwords for MongoDB
# - Use production Auth0 credentials
# - Set NODE_ENV=production
# - Update FRONTEND_URL to your actual domain
# - Enable HTTPS/SSL in nginx configuration
# - Set up proper secrets management (Docker secrets, AWS Secrets Manager, etc.)
