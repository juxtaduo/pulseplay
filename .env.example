# ============================================
# PulsePlay AI - Environment Configuration Example
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# ============================================
# Environment Mode
# ============================================
NODE_ENV=development

# ============================================
# Server Configuration
# ============================================
PORT=3001
BACKEND_PORT=3001
FRONTEND_PORT=5173
FRONTEND_URL=http://localhost:5173

# ============================================
# MongoDB Configuration
# ============================================
# Local MongoDB (development)
MONGODB_URI=mongodb://localhost:27017/pulseplay-dev

# MongoDB Atlas (production)
# MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/pulseplay?retryWrites=true&w=majority

# Docker MongoDB (with docker-compose.yml)
# MONGO_ROOT_USERNAME=admin
# MONGO_ROOT_PASSWORD=your_secure_password
# MONGODB_URI=mongodb://admin:your_secure_password@mongodb:27017/pulseplay?authSource=admin

# ============================================
# Auth0 Configuration
# ============================================
# Backend Auth0
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your_client_id
AUTH0_CLIENT_SECRET=your_client_secret
AUTH0_AUDIENCE=https://api.pulseplay.ai
AUTH0_ISSUER_BASE_URL=https://your-domain.auth0.com

# Frontend Auth0 (Vite environment variables)
VITE_AUTH0_DOMAIN=your-domain.auth0.com
VITE_AUTH0_CLIENT_ID=your_client_id
VITE_AUTH0_AUDIENCE=https://api.pulseplay.ai

# ============================================
# AI/ML API Keys
# ============================================
GEMINI_API_KEY=your_gemini_api_key

# Optional APIs
GRADIENT_AI_API_KEY=your_gradient_api_key

# ============================================
# Optional Services
# ============================================
# Error tracking
SENTRY_DSN=your_sentry_dsn

# Analytics
SNOWFLAKE_ACCOUNT=your_snowflake_account
SNOWFLAKE_USERNAME=your_username
SNOWFLAKE_PASSWORD=your_password

# Database Admin (for docker-compose.yml)
MONGO_EXPRESS_PORT=8081
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=changeme
