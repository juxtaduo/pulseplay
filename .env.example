# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/pulseplay?retryWrites=true&w=majority

# Auth0 Configuration (Backend)
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your_client_id
AUTH0_CLIENT_SECRET=your_client_secret
AUTH0_AUDIENCE=https://api.pulseplay.ai
AUTH0_ISSUER_BASE_URL=https://your-domain.auth0.com

# Auth0 Configuration (Frontend - create .env in root)
# VITE_AUTH0_DOMAIN=your-domain.auth0.com
# VITE_AUTH0_CLIENT_ID=your_client_id
# VITE_AUTH0_AUDIENCE=https://api.pulseplay.ai

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key

# Context7 MCP Server (for documentation lookup)
# Get your API key from: https://context7.com
CONTEXT7_API_KEY=ctx7sk_your_api_key_here

# Optional: DigitalOcean Gradient AI (Stretch Goal)
GRADIENT_AI_API_KEY=your_gradient_api_key

# Optional: Snowflake Analytics
SNOWFLAKE_ACCOUNT=your_snowflake_account
SNOWFLAKE_USERNAME=your_username
SNOWFLAKE_PASSWORD=your_password

# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Optional: Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn
